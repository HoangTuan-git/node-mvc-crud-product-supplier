<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center page-header">
    <h2><i class="bi bi-box me-2"></i>Danh sách sản phẩm</h2>
    <a href="/products/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm
    </a>
</div>

<% if (products.length === 0) { %>
    <div class="text-center py-5">
        <i class="bi bi-box display-1 text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có sản phẩm nào</h4>
        <p class="text-muted">Hãy thêm sản phẩm đầu tiên của bạn</p>
        <a href="/products/new" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Thêm sản phẩm
        </a>
    </div>
<% } else { %>
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Tổng cộng: <%= products.length %> sản phẩm</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Nhà cung cấp</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng giá trị</th>
                            <th>Ngày tạo</th>
                            <th width="150">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td>
                                    <strong><%= product.name %></strong>
                                </td>
                                <td>
                                    <% if (product.supplierId) { %>
                                        <a href="/suppliers/<%= product.supplierId._id %>" 
                                           class="text-decoration-none">
                                            <i class="bi bi-building me-1"></i>
                                            <%= product.supplierId.name %>
                                        </a>
                                    <% } else { %>
                                        <span class="text-muted">Không xác định</span>
                                    <% } %>
                                </td>
                                <td><%= product.formattedPrice %></td>
                                <td>
                                    <span class="badge bg-info"><%= product.quantity %></span>
                                </td>
                                <td>
                                    <strong class="text-success"><%= product.formattedTotalValue %></strong>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= product.createdAt.toLocaleDateString('vi-VN') %>
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/products/<%= product._id %>" 
                                           class="btn btn-outline-info" 
                                           title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/products/<%= product._id %>/edit" 
                                           class="btn btn-outline-warning" 
                                           title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="POST" action="/products/<%= product._id %>?_method=DELETE" 
                                              class="d-inline" 
                                              onsubmit="return confirmDelete('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger" 
                                                    title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-md-6">
                    <strong>Tổng giá trị tất cả sản phẩm:</strong>
                </div>
                <div class="col-md-6 text-end">
                    <strong class="text-success">
                        <%= new Intl.NumberFormat('vi-VN', {
                            style: 'currency',
                            currency: 'VND'
                        }).format(products.reduce((total, product) => total + product.totalValue, 0)) %>
                    </strong>
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('../partials/footer') %>