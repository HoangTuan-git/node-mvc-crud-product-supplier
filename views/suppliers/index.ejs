<%- include('../partials/header') %>

<div class="d-flex justify-content-between align-items-center page-header">
    <h2><i class="bi bi-building me-2"></i>Danh sách nhà cung cấp</h2>
    <a href="/suppliers/new" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Thêm nhà cung cấp
    </a>
</div>

<% if (suppliers.length === 0) { %>
    <div class="text-center py-5">
        <i class="bi bi-building display-1 text-muted mb-3"></i>
        <h4 class="text-muted">Chưa có nhà cung cấp nào</h4>
        <p class="text-muted">Hãy thêm nhà cung cấp đầu tiên của bạn</p>
        <a href="/suppliers/new" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Thêm nhà cung cấp
        </a>
    </div>
<% } else { %>
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Tổng cộng: <%= suppliers.length %> nhà cung cấp</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Tên nhà cung cấp</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Ngày tạo</th>
                            <th width="150">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% suppliers.forEach(supplier => { %>
                            <tr>
                                <td>
                                    <strong><%= supplier.name %></strong>
                                </td>
                                <td><%= supplier.address %></td>
                                <td>
                                    <i class="bi bi-telephone me-1"></i>
                                    <%= supplier.getFormattedPhone() %>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= supplier.createdAt.toLocaleDateString('vi-VN') %>
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="/suppliers/<%= supplier._id %>" 
                                           class="btn btn-outline-info" 
                                           title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="/suppliers/<%= supplier._id %>/edit" 
                                           class="btn btn-outline-warning" 
                                           title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form method="POST" action="/suppliers/<%= supplier._id %>?_method=DELETE" 
                                              class="d-inline" 
                                              onsubmit="return confirmDelete('Bạn có chắc chắn muốn xóa nhà cung cấp này?')">
                                            <button type="submit" 
                                                    class="btn btn-outline-danger" 
                                                    title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% } %>

<%- include('../partials/footer') %>